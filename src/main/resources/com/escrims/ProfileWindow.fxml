<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<VBox prefWidth="450.0" spacing="10.0" alignment="CENTER_LEFT"
      xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.escrims.application.ProfileWindowController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Editar Perfil de Usuario">
            <font>
                <Font name="Arial Bold" size="24.0" />
            </font>
        </Label>

        <Label text="Username:" />
        <TextField fx:id="txtUsername" />

        <Label text="RegiÃ³n/Servidor:" />
        <TextField fx:id="txtRegion" promptText="ej: BR, LAS" />

        <Label text="Disponibilidad Horaria:" />
        <TextField fx:id="txtDisponibilidad" promptText="ej: Noches 21:00-00:00" />

        <Label text="MMR (para Valorant):" />
        <TextField fx:id="txtMmr" promptText="ej: 1500" />

        <Label text="Roles Preferidos (ej: Duelista, Support):" />
        <HBox spacing="5.0">
            <TextField fx:id="txtNuevoRol" prefWidth="300.0" HBox.hgrow="ALWAYS" />
            <Button onAction="#onAgregarRolClicked" text="Agregar Rol" />
        </HBox>
        <ListView fx:id="rolesListView" prefHeight="100.0" />

        <Label fx:id="statusLabel" textFill="GREEN" wrapText="true" />

        <Button onAction="#onGuardarClicked" text="Guardar Cambios" maxWidth="Infinity" style="-fx-background-color: #aeffb0; -fx-font-weight: bold;"/>
    </children>
</VBox>